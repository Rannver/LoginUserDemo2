<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.rannver.loginuserdemo">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:name="org.litepal.LitePalApplication">
        <activity android:name=".UI.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".UI.SignUpActivity"></activity>
        <activity android:name=".UI.PersonInfoActivity"></activity>
        <activity android:name=".UI.PersonInfoDetaiActivity"></activity>
        <activity android:name=".UI.PersonInfoEditActivity"></activity>
        <activity android:name=".UI.ChooseFriendActivity"></activity>
        <activity android:name=".UI.FriendSettingActivity"></activity>
        <activity android:name=".UI.FriendInfoDetailActivity"></activity>
    </application>
    <!-- 读取 -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <!-- 写入权限 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <!-- 创建与删除权限 -->
    <uses-permission android:name="android.permission.MOUNT_FORMAT_FILESYSTEMS" />
    <!--连接网络权限 -->
    <uses-permission android:name="android.permission.INTERNET"/>
    <!--读取网络信息状态 -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <!--获取当前wifi状态 -->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
    <!--允许程序改变网络连接状态 -->
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE"/>
</manifest>