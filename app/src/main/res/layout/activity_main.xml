<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.rannver.loginuserdemo.UI.MainActivity">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/MainIcon"
        android:src="@drawable/main_icon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/MainIcon"
        android:id="@+id/lin_id"
        android:paddingTop="10dp"
        android:layout_marginTop="50dp">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/id_icon" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ed_login_id"
            android:hint="请输入用户名"
            android:background="@null"
            android:paddingTop="10dp"
            android:paddingLeft="5dp"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#CACDD1"
        android:layout_below="@+id/lin_id"
        android:layout_marginTop="7dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lin_pwd"
        android:layout_below="@id/lin_id"
        android:orientation="horizontal"
        android:layout_marginTop="15dp">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/pwd_icon"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ed_login_pwd"
            android:hint="请输入密码"
            android:background="@null"
            android:paddingTop="10dp"
            android:inputType="textPassword"
            android:paddingLeft="5dp"
            />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#CACDD1"
        android:layout_below="@+id/lin_pwd"
        android:layout_marginTop="7dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_login"
        android:id="@+id/btu_login_1"
        android:layout_below="@+id/lin_pwd"
        android:layout_marginTop="30dp"
        android:text="普 通 登 录"
        android:textSize="18sp"
        android:gravity="center"
        android:textColor="#ffffff"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_login"
        android:id="@+id/btu_login_2"
        android:layout_below="@+id/btu_login_1"
        android:layout_marginTop="5dp"
        android:text="老 年 登 录"
        android:textSize="18sp"
        android:gravity="center"
        android:textColor="#ffffff"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_sinup_user"
        android:layout_below="@id/btu_login_2"
        android:text="@string/Signup_name"
        android:layout_alignParentRight="true"
        android:layout_marginTop="12dp"
        android:textColor="#6392c5"
        android:paddingRight="3dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_change_pwd"
        android:layout_below="@id/btu_login_2"
        android:text="@string/Change_pwd_name"
        android:layout_alignParentLeft="true"
        android:textColor="#6392c5"
        android:layout_marginTop="12dp"
        android:paddingLeft="3dp"/>

</RelativeLayout>
